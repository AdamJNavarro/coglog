@model IEnumerable<CogLog.UI.Models.Category.BaseCategoryVm>    
@{
    ViewData["Title"] = "Categories";
}
    
<header>
    <h1>Categories</h1>
</header>

<div>
    @foreach (var item in Model)
    {
        <a asp-action="Details" asp-route-id="@item.Id">
            @Html.DisplayFor(modelItem => item.Name)
        </a>
    }
</div>