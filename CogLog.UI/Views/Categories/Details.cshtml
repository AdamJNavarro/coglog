@model CategoryDetailsVm

<div class="page-header">
    <h1>@Model.CapitalizedName</h1>
    <a asp-action="Edit" asp-route-id="@Model.Id">(edit)</a>
</div>

@if (!string.IsNullOrWhiteSpace(Model.Description))
{
    <div class="page-description">@Model.Description</div>
}


<div class="section-header">
    <h2>Subjects</h2>
    <a asp-controller="Subjects" asp-action="Create" asp-route-categoryId="@Model.Id">+</a>
</div>

<ul class="inline-list">
    @foreach (var item in Model.Subjects)
    {
        <li><a asp-controller="Subjects" asp-action="Details" asp-route-id="@item.Id">
                @item.Name
            </a></li>
    }
</ul>
