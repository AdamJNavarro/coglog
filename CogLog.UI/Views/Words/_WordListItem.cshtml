@using CogLog.App.Constants
@model WordVm

<div class="card">
    <div class="card-header">
        <div class="card-header-top">
            <div class="title-container">

                @if (User.IsInRole(AuthConstants.Roles.Administrator))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="card-title">@Model.CapitalizedSpelling</a>
                }
                else
                {
                    <div class="card-title">@Model.CapitalizedSpelling</div>
                }
                @* <span class="card-language">@Model.LanguageDisplay</span> *@
            </div>
        </div>
        <div class="card-header-bottom">
            <div class="card-date">@DateOnly.FromDateTime(@Model.LearnedAt).ToString("M/d/yy")</div>
            <div>â€¢</div>
            <div class="card-subject">@Model.PartOfSpeechDisplay</div>
        </div>
    </div>

    <div class="card-content">
        @Model.Definition
    </div>

</div>